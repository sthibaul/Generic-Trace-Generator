# Organisation
OBJDIR  = obj# Dir containing all .o files
BINDIR  = bin# Dir containing all executable files
MODDIR  = mod# Dir containing all fortran modules files
SRCDIR  = src# Dir containing all sources
LIBDIR  = lib# Dir containing all lib
EXMDIR	= exm# Dir containing all the examples source code
INCDIR  = inc# Dir containing all the C includes
DOCDIR  = doc# Dir containing all the documentation

# Do not touch
DIR     = $(OBJDIR) $(MODDIR) $(LIBDIR) $(BINDIR)
CDIR    = $(SRCDIR)/C
FDIR    = $(SRCDIR)/FORTRAN

#Lib Generated
LIBNAME = GTG
LIBLINK = -l$(LIBNAME)

# Archive
AR	= ar
AROPT	= ruv

# C compilation
CC	= mpicc
CFLAGS	= -O3 -Wall -pedantic

# Fortran compilation
FC	= mpif90
FFLAGS	= -O3 -J$(MODDIR)/

# Documentation
DOC_GEN = doxygen
DOCFILE = Doxyfile

# Debug options
DEBUG	= -g

# Comment the kind of trace you do no want to build
TRACE_FLAG    = -DBUILD_PAJE #-DBUILD_OTF -DBUILD_TAU
